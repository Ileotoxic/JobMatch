@model List<BookShop.Models.Category>

<h2>Categories</h2>


<table class="table">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                @if (User.IsInRole("Admin"))
                {
                <td>
                        <a href="/Admin/Category/CategoryChangeStatus/?status=true&id=@category.CategoryId">Approve  |</a>
                        <a href="/Admin/Category/CategoryChangeStatus/?status=false&id=@category.CategoryId">  Deny  |</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
